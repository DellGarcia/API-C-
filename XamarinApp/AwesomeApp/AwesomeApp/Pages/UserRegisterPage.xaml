<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AwesomeApp.Pages.UserRegisterPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Margin="15">
            <Label Text="Nome:" FontSize="Large" Margin="3, 0"/>
            <Entry Placeholder="Digite seu nome" ClearButtonVisibility="WhileEditing" Keyboard="Text" Margin="0, 0, 0, 25"/>
            
            <Label Text="Sobrenome:" FontSize="Large" Margin="3, 0"/>
            <Entry Placeholder="Digite seu sobrenome" ClearButtonVisibility="WhileEditing" Keyboard="Numeric" Margin="0, 0, 0, 25"/>
            
            <Label Text="Idade:" FontSize="Large" Margin="3, 0"/>
            <Entry Placeholder="Digite sua idade" ClearButtonVisibility="WhileEditing" Keyboard="Numeric" Margin="0, 0, 0, 25"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>